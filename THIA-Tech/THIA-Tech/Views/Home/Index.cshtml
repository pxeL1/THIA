@{
    ViewData["Title"] = "Home Page";
}
@using THIA_Tech.Services
@inject IProductService _productService

<div id="carouselExampleCaptions" class="carousel slide container">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@_productService.GetProductImage(4).Result" class="d-block w-100 h-100 hero-image" alt="...">
            <div class="carousel-caption d-flex flex-column align-items-start" style="margin-bottom: 50px;">
                <h2 style="font-weight: 600;">Our newest offers</h2>
                <a class="btn btn-primary btn-lg" asp-controller="Product" asp-action="ProductDetails" asp-route-id="4">Check it out</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@_productService.GetProductImage(16).Result" class="d-block w-100 h-100 hero-image" alt="...">
            <div class="carousel-caption d-flex flex-column align-items-start" style="margin-bottom: 50px;">
                <h2 style="font-weight: 600;">Our newest offers</h2>
                <a class="btn btn-primary btn-lg" asp-controller="Product" asp-action="ProductDetails" asp-route-id="16">Check it out</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@_productService.GetProductImage(22).Result" class="d-block w-100 h-100 hero-image" alt="...">
            <div class="carousel-caption d-flex flex-column align-items-start" style="margin-bottom: 50px;">
                <h2 style="font-weight: 600;">Our newest offers</h2>
                <a class="btn btn-primary btn-lg" asp-controller="Product" asp-action="ProductDetails" asp-route-id="22">Check it out</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container mt-5">
    <div class="row align-items-baseline">
        <div class="col d-flex align-items-center flex-column">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-truck" viewBox="0 0 16 16">
                <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5zm1.294 7.456A2 2 0 0 1 4.732 11h5.536a2 2 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456M12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2" />
            </svg>
            <p><span style="font-weight: 600;">International</span> shipping</p>
        </div>
        <div class="col d-flex align-items-center flex-column">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-cash-stack" viewBox="0 0 16 16">
                <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4" />
                <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2z" />
            </svg>
            <p>Money back within 30 days <span style="font-weight:600;">guarantee</span></p>
        </div>
        <div class="col d-flex align-items-center flex-column">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person-arms-up" viewBox="0 0 16 16">
                <path d="M8 3a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3" />
                <path d="m5.93 6.704-.846 8.451a.768.768 0 0 0 1.523.203l.81-4.865a.59.59 0 0 1 1.165 0l.81 4.865a.768.768 0 0 0 1.523-.203l-.845-8.451A1.5 1.5 0 0 1 10.5 5.5L13 2.284a.796.796 0 0 0-1.239-.998L9.634 3.84a.7.7 0 0 1-.33.235c-.23.074-.665.176-1.304.176-.64 0-1.074-.102-1.305-.176a.7.7 0 0 1-.329-.235L4.239 1.286a.796.796 0 0 0-1.24.998l2.5 3.216c.317.316.475.758.43 1.204Z" />
            </svg>
            <p>Warranty <span style="font-weight:600;">extended</span> for one additional year</p>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="border border-secondary-subtle rounded p-3">
        <h2 class="text-center mb-3 section-header">Latest Products</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var product in await _productService.GetLatestProducts())
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@_productService.GetProductImage(product.Id).Result" class="card-img-top" alt="..." width="540" height="340"/>
                        <div class="card-body">
                            <h5 class="card-title text-center">@product.Manufacturer @product.Model</h5>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="btn btn-sm btn-primary commonBtn" asp-controller="Product" asp-action="ProductDetails" asp-route-id="@product.Id">Details</a>
                                <small class="text-body-secondary">@product.Price KM</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
